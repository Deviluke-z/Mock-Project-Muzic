<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_gunmetal"
            android:orientation="vertical"
            tools:context=".view.fragment.home.HomeFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="@dimen/dp10"
                    android:src="@drawable/ic_option" />

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp10"
                    android:layout_weight="4"
                    android:background="@drawable/round_bg"
                    app:iconifiedByDefault="false"
                    app:queryHint="Search song, album, ..." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dp10"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_hot_recommend"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHotRecommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_hot_recommend_sample" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginEnd="@dimen/dp10"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="@string/tv_playlist"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPlaylist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_hot_recommend_sample" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginEnd="@dimen/dp10"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="@string/text_recent_played_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecentPlayed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_recent_played" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/dark_gunmetal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/arsenic"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp10"
                        android:src="@drawable/ic_app" />

                    <TextView
                        android:id="@+id/tvAppName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:text="@string/tv_app_name"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/item_horizontal_drawer"
                            android:text="@string/sample_number" />

                        <TextView
                            style="@style/item_horizontal_drawer"
                            android:text="@string/sample_number" />

                        <TextView
                            style="@style/item_horizontal_drawer"
                            android:text="@string/sample_number" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp10"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/item_horizontal_drawer"
                            android:text="@string/item_songs" />

                        <TextView
                            style="@style/item_horizontal_drawer"
                            android:text="@string/text_albums" />

                        <TextView
                            style="@style/item_horizontal_drawer"
                            android:text="@string/text_artist" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/item_setting_layout"
                        android:text="@string/tv_display"
                        app:drawableStartCompat="@drawable/ic_display_gradient" />

                    <TextView
                        style="@style/item_setting_layout"
                        android:text="@string/tv_audio"
                        app:drawableStartCompat="@drawable/ic_audio_gradient" />

                    <TextView
                        style="@style/item_setting_layout"
                        android:text="@string/tv_headset"
                        app:drawableStartCompat="@drawable/ic_headphones_gradient" />

                    <TextView
                        style="@style/item_setting_layout"
                        android:text="@string/tv_lockscreen"
                        app:drawableStartCompat="@drawable/ic_lock_gradient" />

                    <TextView
                        style="@style/item_setting_layout"
                        android:text="@string/tv_advanced"
                        app:drawableStartCompat="@drawable/ic_advanced_gradient" />

                    <TextView
                        style="@style/item_setting_layout"
                        android:text="@string/tv_other"
                        app:drawableStartCompat="@drawable/ic_setting_gradient" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
