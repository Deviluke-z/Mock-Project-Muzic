<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gunmetal"
    android:orientation="vertical"
    tools:context=".view.fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="@dimen/sample_margin"
            android:src="@drawable/ic_baseline_menu_24" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sample_margin"
            android:layout_weight="4"
            android:background="@drawable/round_bg"
            android:backgroundTint="@color/arsenic"
            app:iconifiedByDefault="false"
            app:queryHint="Search song, album, ..." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/sample_margin"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_hot_recommend"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHotRecommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_sample" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/sample_margin"
            android:layout_marginTop="@dimen/sample_margin"
            android:layout_marginEnd="@dimen/sample_margin"
            android:background="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sample_margin"
            android:text="@string/tv_playlist"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_sample" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/sample_margin"
            android:layout_marginTop="@dimen/sample_margin"
            android:layout_marginEnd="@dimen/sample_margin"
            android:background="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sample_margin"
            android:text="@string/text_recent_played_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecentPlayed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_recent_played" />

    </LinearLayout>

</LinearLayout>