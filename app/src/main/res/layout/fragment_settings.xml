<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gunmetal"
    android:orientation="vertical"
    tools:context=".view.fragment.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp10"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_option" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/tv_settings"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        style="@style/item_setting_layout"
        android:text="@string/tv_display"
        app:drawableStartCompat="@drawable/ic_display_gradient" />

    <View style="@style/screen_setting_separate_line" />

    <TextView
        style="@style/item_setting_layout"
        android:text="@string/tv_audio"
        app:drawableStartCompat="@drawable/ic_audio_gradient" />

    <View style="@style/screen_setting_separate_line" />

    <TextView
        style="@style/item_setting_layout"
        android:text="@string/tv_headset"
        app:drawableStartCompat="@drawable/ic_headphones_gradient" />

    <View style="@style/screen_setting_separate_line" />

    <TextView
        style="@style/item_setting_layout"
        android:text="@string/tv_lockscreen"
        app:drawableStartCompat="@drawable/ic_lock_gradient" />

    <View style="@style/screen_setting_separate_line" />

    <TextView
        style="@style/item_setting_layout"
        android:text="@string/tv_advanced"
        app:drawableStartCompat="@drawable/ic_advanced_gradient" />

    <View style="@style/screen_setting_separate_line" />

    <TextView
        style="@style/item_setting_layout"
        android:text="@string/tv_other"
        app:drawableStartCompat="@drawable/ic_setting_gradient" />

    <View style="@style/screen_setting_separate_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10" />

</LinearLayout>