<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_main_theme"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivSongThumbnailNotification"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_margin="@dimen/dp10"
        tools:src="@drawable/ic_sample_playlist" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSongTitleNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/nearly_white"
            android:textSize="@dimen/sp16"
            tools:text="Chay Ve Khoc Voi Anh" />

        <TextView
            android:id="@+id/tvSongArtistNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/nearly_white"
            tools:text="Erik" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivPrevious"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="@dimen/dp10"
        android:src="@drawable/ic_baseline_skip_previous_24" />

    <ImageView
        android:id="@+id/ivPlayPause"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="@dimen/dp10"
        tools:src="@drawable/ic_baseline_play_arrow_24" />

    <ImageView
        android:id="@+id/ivNext"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="@dimen/dp10"
        android:src="@drawable/ic_baseline_skip_next_24" />

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="@dimen/dp10"
        android:src="@drawable/ic_baseline_close_24" />

</LinearLayout>